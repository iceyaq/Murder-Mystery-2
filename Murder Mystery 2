-- Load and execute the script from GitHub with error handling
local scriptUrl = "https://raw.githubusercontent.com/iceyaq/Murder-Mystery-2/main/Murder%20Mystery%202"

local success, errorMessage = pcall(function()
    local source = game:HttpGet(scriptUrl, true)
    if source then
        local func, loadError = loadstring(source)
        if func then
            func()
        else
            error("Failed to load script: " .. (loadError or "Unknown error"))
        end
    else
        error("Failed to fetch script from URL")
    end
end)

if not success then
    warn("Script execution error: " .. errorMessage)
end
